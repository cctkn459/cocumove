# ============================================
# COCUMOVE - Configuración de Entorno
# ============================================

# ============================================
# Base de Datos
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/cocumove

# ============================================
# Autenticación
# ============================================
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRATION=7d

# ============================================
# Servidor
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Cloudflare R2
# ============================================
CLOUDFLARE_R2_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://[custom-domain-or-public-url]
CLOUDFLARE_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_BUCKET_NAME=cocumove

# ============================================
# Email
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=cocupoly@gmail.com
SMTP_PASS=your-app-password

# ============================================
# Tokens COCU
# ============================================
COCU_TOKEN_INITIAL_BALANCE=100
COCU_TOKEN_RIDE_REWARD=5
COCU_TOKEN_REFERRAL_BONUS=10

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:3000/api
VITE_APP_TITLE=COCUMOVE - Move The Future
VITE_APP_LOGO=/logo.png

