# Production Environment Variables for Vercel

# Database - Will be set by Vercel Postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/cocumove

# JWT Secret
JWT_SECRET=cocumove-production-secret-key-2024-$(date +%s)

# API URL
VITE_API_URL=https://cocumove.vercel.app/api

# Tokens COCU
COCU_TOKEN_INITIAL_BALANCE=100
COCU_TOKEN_RIDE_REWARD=5
COCU_TOKEN_REFERRAL_BONUS=10

# Cloudflare R2 (Optional - configure later)
CLOUDFLARE_R2_ENDPOINT=https://account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://files.cocumove.com
CLOUDFLARE_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-key
CLOUDFLARE_BUCKET_NAME=cocumove
